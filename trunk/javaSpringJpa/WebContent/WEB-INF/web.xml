<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:/applicationContext.xml</param-value>
  </context-param>
  <servlet>
    <servlet-name>ListEmployeeServlet</servlet-name>
    <servlet-class>com.island.servlet.ListEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateEmployeeServlet</servlet-name>
    <servlet-class>com.island.servlet.CreateEmployeeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <servlet-class>com.island.servlet.DeleteEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListEmployeeServlet</servlet-name>
    <url-pattern>/employee/ListEmployee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateEmployeeServlet</servlet-name>
    <url-pattern>/employee/CreateEmployee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <url-pattern>/employee/DeleteEmployee</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>MaintainEmployeeServlet</servlet-name>
    <servlet-class>com.island.servlet.MaintainEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MaintainEmployeeServlet</servlet-name>
    <url-pattern>/employee/MaintainEmployee</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
</web-app>